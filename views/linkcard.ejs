       <div class="linkcard">
        <h1><center>Link a card</center></h1>
       </div>

       <form class="card-details ">
        <center><i class="fas fa-credit-card fa-5x"></i></center>
        <h3 class="yourdetails">Please enter your details.</h3>
        <label for="ccn">Credit Card Number:</label>
        <input id="ccn" class="form-control" type="tel" inputmode="numeric" pattern="[0-9\s]{13,19}"  maxlength="19" placeholder="xxxx xxxx xxxx xxxx">
        <br><label for="ctype">Card type:</label><br>
        <select name="cardtype" class="form-control">
            <option value="Visa">Visa</option>
            <option value="Master">Master</option>
            <option value="Rupay">Rupay</option>
        </select><br>
        <label for="expiry">Expiration date</label>
        <input type="date" class="form-control">
        <br><label for="cvv">Enter cvv:</label>
        <input type="numberic" class="form-control" maxlength:"30" placeholder="xxx">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Link</button>
      </form>
